package Alg;
import java.util.*;
public class TestEnvironment {
	
	static Scanner scan = new Scanner(System.in);
	
	public static void main(String[] args) {
		
		float mealCost; int tip, tax;
		
		
		System.out.println("Enter meal: "); mealCost = scan.nextFloat();
		System.out.println("Enter tip: "); tip = scan.nextInt();
		System.out.println("Enter tax: "); tax = scan.nextInt();
		
		float tipped = (mealCost * ((float)tip/100)); System.out.println(tipped);
		float taxed = (mealCost * ((float)tax/100)); System.out.println(taxed);
		int total = (int)(mealCost + tipped + taxed);
		
		
		
		System.out.println(total);
		
	}

}
