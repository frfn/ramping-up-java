public class Main {
	
	public static class Person {
		private String name;
		private int age;
		public Person(String name, int age) {
			this.name = name;
			this.age = age;
		}
		public String toString() {
			String str = "";
			str += "Name: " + this.name + "\nAge: " + this.age;
			return str;
		}
		
		public String getName() {
			return name;
		}
		
		public void setName(String name) {
			this.name = name;
		}
	}
	
